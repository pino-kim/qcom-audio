SectionModifier
	Name "Play Music"
	Comment "Modifier for music playback"

	EnableSequence
		'MI2S_RX Audio Mixer MultiMedia1':1:1
	EndSequence

	DisableSequence
		'MI2S_RX Audio Mixer MultiMedia1':1:0
	EndSequence

	# ALSA PCMs
	CapturePCM 0
	PlaybackPCM 0

EndSection

SectionModifier
	Name "Capture Music"

	EnableSequence
		'MultiMedia1 Mixer MI2S_TX':1:1
	EndSequence

	DisableSequence
		'MultiMedia1 Mixer MI2S_TX':1:0
	EndSequence

	# ALSA PCMs
	CapturePCM 0
	PlaybackPCM 0

EndSection

SectionModifier
	Name "Play Voice"

	EnableSequence
		'MI2S_RX_Voice Mixer CSVoice':1:1
		'Voice_Tx Mixer MI2S_TX_Voice':1:1
	EndSequence

	DisableSequence
		'MI2S_RX_Voice Mixer CSVoice':1:0
		'Voice_Tx Mixer MI2S_TX_Voice':1:0
	EndSequence

	# ALSA PCMs
