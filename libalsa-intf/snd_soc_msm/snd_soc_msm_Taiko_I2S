SectionDevice
	Name "Headphones"
	Comment "Headset Rx device"

	EnableSequence
		'SLIM RX1 MUX':0:AIF1_PB
		'SLIM RX2 MUX':0:AIF1_PB
		'MI2S_RX Channels':0:Two
		'RX1 MIX1 INP1':0:RX1
		'RX2 MIX1 INP1':0:RX2
		'HPHL DAC Switch':1:1
		'HPHL Volume':1:80
		'HPHR Volume':1:80
		'RX1 Digital Volume':1:67
		'RX2 Digital Volume':1:67
	EndSequence

	DisableSequence
		'SLIM RX1 MUX':0:ZERO
		'SLIM RX2 MUX':0:ZERO
		'RX1 MIX1 INP1':0:ZERO
		'RX2 MIX1 INP1':0:ZERO
		'HPHL DAC Switch':1:0
		'HPHL Volume':1:0
		'HPHR Volume':1:0
		'RX1 Digital Volume':1:0
		'RX2 Digital Volume':1:0
	EndSequence

	ACDBID	10:1
	EffectsMixerCTL "SRS TruMedia"
	EC_REF_RXMixerCTL "MI2S_RX"

EndSection

