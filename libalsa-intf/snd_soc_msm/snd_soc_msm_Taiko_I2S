	PlaybackPCM 2

EndSection

SectionModifier
	Name "Play VOIP"

	EnableSequence
		'MI2S_RX_Voice Mixer Voip':1:1
		'Voip_Tx Mixer MI2S_TX_Voip':1:1
	EndSequence

	DisableSequence
		'MI2S_RX_Voice Mixer Voip':1:0
		'Voip_Tx Mixer MI2S_TX_Voip':1:0
	EndSequence

       # ALSA PCMs
	PlaybackPCM 1
	CapturePCM 1

EndSection

SectionModifier
	Name "Play VoLTE"

	EnableSequence
		'SMI2S_RX_Voice Mixer VoLTE':1:1
		'VoLTE_Tx Mixer MI2S_TX_VoLTE':1:1
	EndSequence

	DisableSequence
		'MI2S_RX_Voice Mixer VoLTE':1:0
		'VoLTE_Tx Mixer MI2S_TX_VoLTE':1:0
	EndSequence

	# ALSA PCMs
